@import 'nib'

serif-font = Georgia, serif
default-font = Palatino, serif
headline-font = Montserrat, sans-serif
voice-font = Shanti, sans-serif

// ----------------------------------------------------------------------------

body
  background: #f6f6f4
  color: #505050

body, input, textarea, td, th
  font-family: default-font
  font-weight: 400
  font-size: 11pt
  line-height: 1.5

html, body
  height: 100%

// ----------------------------------------------------------------------------

.page
  box-sizing: border-box
  padding: 100px 0
  border-bottom: solid 1px #ddd

  > div
    width: 900px
    margin: 0 auto

  .headline
    font-size: 32pt
    text-align: center
    font-family: headline-font
    font-weight: 400
    letter-spacing: -2px
    color: #707090

    em
      display: none

  h3, blockquote, p, ul, li
    margin: 20px 0

  blockquote > p
    margin: 0

  .info
    text-align: center
    width: 600px
    margin: 0 auto
    font-size: 1.2em

// ----------------------------------------------------------------------------

.action a
  color: white
  background: #333
  text-decoration: none
  padding: 5px 30px
  display: inline-block

  font-family: oswald, sans-serif
  text-transform: uppercase
  font-size: 12pt

  border-radius: 2px

// ----------------------------------------------------------------------------

.page.title
  &
    background: #404040
    color: #aaa
    border-bottom: 0
    padding: 200px 0

  > div
    width: 700px
    overflow: hidden

  h1.headline, p
    float: left
    width: 50%
    box-sizing: border-box

  h1.headline
    color: white
    font-size: 36pt
    line-height: 1.2

    padding-right: 20px
    padding-top: 11px

    text-align: right

  p
    padding-left: 20px
    font-size: 1.2em

// ----------------------------------------------------------------------------

.page.understand
  &
    background: #202020
    color: #aaa

  .headline
    font-size: 20pt
    color: #ddd
    display: none

  a
    color: #888
    text-decoration: none

  .info
    font-size: 1.9em
    line-height: 1.3

  .info strong
    color: #fff
    display: block
    font-weight: bold
    font-size: 1.2em

  li > a:first-child
    font-weight: bold
    color: #eee
    display: block

    font-family: serif-font
    padding-bottom: 10px
    margin-bottom: 10px

    font-size: 1.1em

  ul
    margin-top: 40px
    overflow: hidden
    font-size: 0.9em

  li
    margin-top: 20px
    box-sizing: border-box
    display: block

    text-align: center

    float: left
    width: 33%
    padding: 0 25px

// ----------------------------------------------------------------------------

.page.email
  &
    background: #d3d3d0 * 1.1

    // Flush the letter to the bottom
    padding-bottom: 0

    overflow: hidden

  // The letter itself
  .letter
    width: 500px
    margin: 40px auto 0 auto

    padding: 40px 80px
    background: white
    box-shadow: 0 0 10px rgba(black, 0.2), 10px 5px 0 -4px white, 10px 5px 10px -4px rgba(black, 0.1)

    font-family: voice-font

    color: #707080
    text-shadow: 0 1px 0 rgba(white, 0.1)

  .letter strong
    font-weight: bold
    font-family: default-font

// ----------------------------------------------------------------------------

.page.phone
  text-align: left

  .info
    padding-bottom: 40px

  blockquote
    box-sizing: border-box

    padding: 20px 40px 20px 50px
    background: #e6e6e6
    border-left: solid 1px #ccc
    border-top: solid 1px #ccc

    width: 48%
    float: left
    margin: 0 30px 20px 0

    font-family: voice-font

    border-radius: 3px

    color: #707080
    text-shadow: 0 1px 0 rgba(white, 0.6)

    position: relative

  blockquote p:first-line
    font-weight: bold
    letter-spacing: -1px
    color: #707080 * 0.5

  blockquote:before
    content: '\201c'
    display: block
    font-size: 36pt
    font-family: serif-font

    height: 20px
    line-height: 20px
    width: 30px
    text-align: left

    float: left
    margin: 10px 0 0 -30px

    opacity: 0.5

  blockquote.en
    display: none

  // Section headings
  h3
    font-size: 1.2em
    font-weight: bold

  // Section
  section.sub
    overflow: hidden
    padding: 20px 0
    border-top: solid 1px #ddd

  // Follow up section
  .sub.follow-up
    text-align: center

    h3
      margin-bottom: -10px

// ----------------------------------------------------------------------------

.page.write
  &
    background: #d3d3d0 * 1.1

  .map
    overflow: hidden
    text-align: right
    font-size: 1.1em

  h2.headline
    font-size: 26pt
    text-align: right

  .map iframe
    float: right
    margin-left: 50px
    box-shadow: 0 0 10px rgba(black, 0.2)
